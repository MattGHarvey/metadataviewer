{
	"name": "EXIF Metadata Viewer",
	"short_name": "EXIF Viewer",
	"description": "View and map JPG EXIF metadata instantly in your browser. No uploads, full privacy.",
	"start_url": "./",
	"display": "standalone",
	"background_color": "#ffffff",
	"theme_color": "#1976d2",
	"scope": "./",
	"icons": [
		{
			"src": "./images/icon-192.png",
			"sizes": "192x192",
			"type": "image/png",
			"purpose": "any"
		},
		{
			"src": "./images/icon-512.png",
			"sizes": "512x512",
			"type": "image/png",
			"purpose": "any"
		},
		{
			"src": "./images/icon-192.png",
			"sizes": "192x192",
			"type": "image/png",
			"purpose": "maskable"
		}
	],
	"categories": ["photo", "utilities", "productivity"],
	"file_handlers": [
		{
			"action": "./",
			"accept": {
				"image/jpeg": [".jpg", ".jpeg"],
				"image/jpg": [".jpg"]
			}
		}
	]
}
